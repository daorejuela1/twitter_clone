<div id="user_profile" class="text-center" >
  <h1 class="display-4">Home page</h1>
  <%= link_to @user.avatar do %>
  <picture>
    <%= image_tag @user.avatar.variant(resize_to_fill: [200, 200], vignette: 0).processed %>
  </picture>
<% end %>
  <h2><%= @user.fullname %></h2>
  <h3>@<%= @user.username %></h3>
  <p><%= @user.description %></p>
<table class="table table-primary">
  <tr>
    <th scope="col"> <%= link_to 'Followers',user_followers_path %> </th>
  <%= link_to @user.avatar do %>
    <th scope="col"> <%= link_to 'Following',user_following_path %> </th>
  <% end %>
  </tr>
  <tr>
    <td> <%= link_to @user.followers.length, user_followers_path %> </td>
    <td><%= link_to @user.following.length, user_following_path %></td>
  </tr>
</table>
    <%= render partial: "shared/follow_button", locals: {user: @user}%>
  <%= link_to "New Tweet", compose_tweet_path, class: "btn btn-primary btn-lg m-3" if user_signed_in? && current_user == @user %>
  <% if @user.tweets.nil? %>
    <h1 class="display-4 text-center">Click on create tweet to start</h1>
  <%else%>
    <%= render partial: "shared/tweet_list", locals: {tweets: @tweets}%>
  <%end%>
</div>
